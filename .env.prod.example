# Variáveis de ambiente para PRODUÇÃO (Portainer/VPS)
# IMPORTANTE: Use valores seguros em produção!

# Docker Hub - usado no docker-compose.prod.yml
DOCKERHUB_USERNAME=seu_usuario_dockerhub

# Banco de dados MySQL
MYSQL_ROOT_PASSWORD=TROQUE_POR_SENHA_FORTE
MYSQL_DATABASE=production_control

# Segurança
JWT_SECRET=GERE_UMA_CHAVE_ALEATORIA_SEGURA_AQUI

# Portas (ajuste se necessário)
APP_PORT=5000
DB_PORT=3306

# Customização (opcional)
VITE_APP_TITLE=Controle de Produção - NOBRE
VITE_APP_LOGO=

# OAuth (opcional - deixe vazio se não usar)
OWNER_OPEN_ID=
OAUTH_SERVER_URL=
VITE_OAUTH_PORTAL_URL=
VITE_APP_ID=
